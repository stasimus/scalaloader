<configuration>
    <appender name="STDOUT"
              class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>true</withJansi>
        <encoder>
            <pattern>
                %green(%msg%n)
            </pattern>
        </encoder>
    </appender>

    <logger name="reporter(akka://TestPlanSystem)" level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </logger>
</configuration>